<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetail"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_poster_detail"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_judul_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/judul_film"
        android:layout_toEndOf="@+id/img_poster_detail"
        android:layout_marginStart="26dp"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tv_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_poster_detail"
        android:layout_below="@+id/tv_judul_detail"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp"
        android:text="@string/tanggal"/>
    <TextView
        android:id="@+id/tv_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="@string/overview"
        android:layout_below="@+id/img_poster_detail"/>
    <TextView
        android:id="@+id/tv_desc_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_overview"
        android:layout_marginTop="10dp"
        android:text="@string/overview"/>

    <TextView
        android:id="@+id/tv_top_cast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="@string/top_cast"
        android:layout_below="@+id/tv_desc_detail"/>

    <TextView
        android:id="@+id/tv_cast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_top_cast"
        android:layout_marginTop="10dp"
        android:text="@string/top_cast"/>

</RelativeLayout>